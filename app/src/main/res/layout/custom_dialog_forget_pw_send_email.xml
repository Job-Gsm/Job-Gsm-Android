<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="240dp"
    android:background="@drawable/custom_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호를 입력하세요"
        android:layout_marginTop="40dp"
        android:textSize="26sp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/cert_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/certification_number_edit_text_bg"
            android:singleLine="true"
            android:nextFocusRight="@id/cert_number2"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/cert_number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/certification_number_edit_text_bg"
            android:singleLine="true"
            android:layout_marginStart="5dp"
            android:nextFocusRight="@id/cert_number3"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/cert_number3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/certification_number_edit_text_bg"
            android:singleLine="true"
            android:layout_marginStart="5dp"
            android:nextFocusRight="@id/cert_number4"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/cert_number4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/certification_number_edit_text_bg"
            android:singleLine="true"
            android:nextFocusRight="@id/cert_number5"
            android:layout_marginStart="5dp"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/cert_number5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/certification_number_edit_text_bg"
            android:singleLine="true"
            android:layout_marginStart="5dp"
            android:layout_gravity="end"
            android:maxLength="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/certification_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_layout1"
        android:layout_gravity="center"
        android:text="인증하기"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>
</LinearLayout>