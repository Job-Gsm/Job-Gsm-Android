<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".view.user.InputEmailActivity"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_get_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:text="Job-GSM"
            android:textSize="40sp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증할 이메일을 입력하세요"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/certification_email_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오류"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:textColor="#ff0000" />

        <EditText
            android:id="@+id/certification_email_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/forget_pw_edit_text_bg"
            android:ems="12"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:hint="email address"
            android:paddingStart="12dp"/>

        <Button
            android:id="@+id/register_email_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_layout1"
            android:layout_gravity="center"
            android:text="인증받기"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="90dp"/>
    </LinearLayout>
</LinearLayout>