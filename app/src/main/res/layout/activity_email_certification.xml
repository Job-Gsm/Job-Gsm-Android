<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".view.user.EmailCertificationActivity"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_get_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:text="Job-GSM"
            android:textSize="40sp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="email 인증 단계"
            android:layout_marginTop="37dp"
            android:textColor="#515151" />

        <TextView
            android:id="@+id/notice_send_email_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:text="s21049@gsm.hs.kr 으로 인증번호가 발송되었습니다."
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="35dp">

            <EditText
                android:id="@+id/check_email_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/certification_number_edit_text_bg"
                android:singleLine="true"
                android:nextFocusRight="@id/check_email_number2"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/check_email_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/certification_number_edit_text_bg"
                android:singleLine="true"
                android:layout_marginStart="5dp"
                android:nextFocusRight="@id/check_email_number3"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/check_email_number3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/certification_number_edit_text_bg"
                android:singleLine="true"
                android:layout_marginStart="5dp"
                android:nextFocusRight="@id/check_email_number4"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/check_email_number4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/certification_number_edit_text_bg"
                android:singleLine="true"
                android:nextFocusRight="@id/check_email_number5"
                android:layout_marginStart="5dp"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/check_email_number5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/certification_number_edit_text_bg"
                android:singleLine="true"
                android:layout_marginStart="5dp"
                android:layout_gravity="end"
                android:maxLength="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/finish_cert_email_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_layout2"
                android:text="취소"
                android:textColor="@color/main_color"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/check_number_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_layout1"
                android:text="확인"
                android:layout_marginStart="25dp"
                android:textColor="@color/white"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>