<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".view.user.ForgotPwActivity"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/forgot_pw_bg"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호를 잊으셨나요?"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="37dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/forget_email_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:background="@drawable/forget_pw_edit_text_bg"
                android:paddingLeft="13dp"
                android:hint="email 주소 입력"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            
            <Button
                android:id="@+id/email_certification_btn"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:text="인증"
                android:textColor="@color/white"
                android:background="@drawable/forgot_pw_btn_layout"/>
        </LinearLayout>
        <TextView
            android:id="@+id/email_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오류 메시지"
            android:visibility="gone"
            android:layout_marginStart="30dp"
            android:textColor="#ff0000"/>

        <LinearLayout
            android:id="@+id/new_pw_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:visibility="visible"
            android:orientation="vertical">

            <EditText
                android:id="@+id/new_pw_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="새 비밀번호"
                android:paddingStart="13dp"
                android:background="@drawable/forget_pw_edit_text_bg"/>

            <EditText
                android:id="@+id/new_pw_check_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호 확인"
                android:layout_marginTop="20dp"
                android:paddingStart="13dp"
                android:background="@drawable/forget_pw_edit_text_bg"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호 변경"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:background="@drawable/btn_layout1"
                android:layout_marginTop="15dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호가 기억 나셨나요?"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/back_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인으로 돌아가기"
            android:textColor="#584FDF"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</LinearLayout>