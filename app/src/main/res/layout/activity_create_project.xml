<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CreateProjectActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/app_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로젝트 생성"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:theme="@style/text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_menu"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"/>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"/>

    <EditText
        android:id="@+id/project_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="프로젝트 제목"
        android:paddingStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/create_project_edit_text_bg_s"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="프로젝트 주제"
        android:paddingStart="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/create_project_edit_text_bg_s"/>

    <EditText
        android:id="@+id/need_stack_edit_text"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="필요 스택"
        android:gravity="top"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/create_project_edit_text_bg_m"/>

    <Spinner
        android:id="@+id/spinner_career"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/spinner_bg"
        android:spinnerMode="dropdown"
        android:entries="@array/career"/>

    <EditText
        android:id="@+id/description_edit_text"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:hint="설명"
        android:gravity="top"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/create_project_edit_text_bg_l"/>
    
    <EditText
        android:id="@+id/period_edit_text"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="프로젝트 기간"
        android:paddingStart="10dp"
        android:background="@drawable/create_project_edit_text_bg_s"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:hint="지역"
            android:paddingStart="10dp"
            android:layout_weight="1"
            android:layout_marginEnd="15dp"
            android:background="@drawable/create_project_edit_text_bg_s"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="검색"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_layout1"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:text="프로젝트 생성하기"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_layout1"/>
</LinearLayout>