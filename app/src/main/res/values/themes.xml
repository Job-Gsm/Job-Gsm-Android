<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Job_GSM" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="fontFamily">@font/kreon_regular</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Transparent" parent="Theme.Job_GSM">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>

        <item name="fontFamily">@font/kreon_regular</item>
    </style>

    <style name="Actionbar" parent="Theme.Job_GSM">
        <item name="windowActionBarOverlay">false</item>
        <item name="colorPrimary">@color/main_color</item>
        <item name="fontFamily">@font/kreon_regular</item>
    </style>

    <style name="text" parent="Theme.Job_GSM">
        <item name="fontFamily">@font/jockey_one_regular</item>
    </style>
</resources>